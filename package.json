{
  "name": "datapackage.org",
  "type": "module",
  "version": "2.0-draft",
  "engines": {
    "node": "^20.0.0",
    "npm": "^10.0.0"
  },
  "scripts": {
    "anchors": "node anchors/build.js",
    "build": "astro build && npm run profiles && npm run anchors",
    "clean": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' +",
    "format": "eslint --fix . && prettier --write .",
    "generate": "astro sync",
    "lint": "eslint . && prettier --check .",
    "preview": "astro preview --port 8080",
    "profiles": "node profiles/build.js",
    "start": "astro dev --open --port 8080",
    "update": "ncu -u",
    "test": "npm run lint"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.5.4",
    "@astrojs/markdown-remark": "^5.1.0",
    "@astrojs/starlight": "^0.23.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "astro": "^4.9.3",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "npm-check-updates": "^16.14.18",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.0",
    "rehype-autolink-headings": "^7.1.0",
    "replace-in-file": "^8.0.0"
  }
}
